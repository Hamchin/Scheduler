extends layout

block content
  form(method="post", action="/schedules").my-5
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名
      input(type="text" name="scheduleName" maxlength="255")#scheduleName.form-control
    div.form-group.mt-4
      label(for="memo") メモ
      textarea(name="memo" maxlength="1000" rows="5")#memo.form-control
    div.form-group.mt-4
      label(for="candidates") 候補日程 (改行して複数入力してください)
      textarea(name="candidates" rows="5")#candidates.form-control
    div.mt-4
      button(type="submit").btn.btn-info 予定をつくる
